<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".activities.AddSiteActivity"
        android:background="@color/colorPrimaryDark">

    <include android:id="@+id/toolbarViewAdd"
             layout="@layout/toolbar">
    </include>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context=".activities.AddSiteActivity"
            android:layout_below="@id/toolbarViewAdd">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" android:id="@+id/linearLayout">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_marginTop="10dp"
                            android:id="@+id/img_foto_add"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/ic_camera_alt_black_24dp"/>
                </FrameLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_nombre_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_nombre"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLength="@integer/nombre.maxLength"
                            android:textColor="@color/colorPrimaryText"
                    />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_ciudad_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:hint="@string/hint_ciudad"
                            android:maxLength="@integer/nombre.maxLength"
                            android:focusable="false"
                            android:enabled="false"
                            android:textColor="@color/colorPrimaryText"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_autor_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="autor"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLength="@integer/nombre.maxLength"
                            android:focusable="false"
                            android:enabled="false"
                            android:textColor="@color/colorPrimaryText"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_descripcion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_descripcion"
                            android:inputType="textMultiLine"
                            android:gravity="top|start"
                            android:maxLength="@integer/descripcion.maxLength"
                            android:minLines="7"
                            android:textColor="@color/colorPrimaryText"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</RelativeLayout>